<main>
  <div class="container">
    <div class = "main_title">
      <h2>スケジュール編集</h2>
      <%= render "shared/flash" %>
      <%= render "shared/error", obj: @schedule %>
    </div>

    <%= form_with model: @schedule do |f| %>
      <table>
        <tr>
          <th>タイトル</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>開始日</th>
          <td><%= f.date_field :start_time %></td>
        </tr>
        <tr>
          <th>終了日</th>
          <td><%= f.date_field :end_time %></td>
        </tr>
        <tr>
          <th>終日</th>
          <td>
            <%= f.check_box :all_day ,{checked: @schedule.all_day ==1} %>
            "終日の場合はチェックを入れます"
          </td>
        </tr>
        <tr>
          <th>スケジュールメモ</th>
          <td><%= f.text_area :memo %></td>
        </tr>
      </table>

      <div>
        <%= f.submit "スケジュールの編集を完了する" %>
        <p><%= link_to "スケジュール一覧に戻る", :schedules %></p>
      </div>
    <% end %>
  </div>
</main>